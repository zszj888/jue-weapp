page {
  background: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.page-title{
  text-align: center;
  font-size: 30rpx;
  font-family: STHeitiSC-Medium, STHeitiSC;
  font-weight: 500;
  color: #000000;
  line-height: 44rpx;
}
.role-header .public-bac{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  border-radius: 0px 0px 80rpx 80rpx;
}
.auto-box{
  width: 142rpx;
  height: 142rpx;
  background: #fff;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 60rpx;
}
.auto-box .default-user{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-info{
  text-align: center;
  font-size: 36rpx;
  font-family: STHeitiSC-Medium, STHeitiSC;
  font-weight: 500;
  color: #7E7E7E;
  margin-top: 10rpx;
  line-height: 36rpx;
}
.detail-user-info{
  position: absolute;
  width: 654rpx;
  height: 94rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 80rpx 0px rgba(0, 0, 0, 0.11);
  border-radius: 40rpx;
  line-height: 94rpx;
  text-align: center;
  font-family: STHeitiSC-Medium, STHeitiSC;
  font-weight: 500;
  color: #AAABAB;
  font-size: 32rpx;
  left: 50%;
  margin-left: -327rpx;
  bottom: -47rpx;
}
.my-list{
  width: 100%;
  height: auto;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 80rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 40rpx;
  margin-top: 98rpx;
}
.my-list-item{
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 79rpx;
  padding-right: 59rpx;
  box-sizing: border-box;
}
.list-item-left{
  font-size: 0;
}
.list-item-left image{
  width: 44rpx;
  height: 42rpx;
  display: inline-block;
  vertical-align: middle;
}
.item-text{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  font-family: STHeitiSC-Medium, STHeitiSC;
  font-weight: 500;
  color: #7E7E7E;
  margin-left: 28rpx;
}
.list-item-right image{
  width: 16rpx;
  height: 28rpx;
}