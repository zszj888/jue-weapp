page {
  background: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.role-header .public-bac {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  border-radius: 0px 0px 80rpx 80rpx;
}

.role-content {
  width: 654rpx;
  height: 100%;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 80rpx 0px rgba(0, 0, 0, 0.08);
  border-radius: 60rpx;
  margin: 0 auto;
  margin-top: -190rpx;
  padding-top: 20rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx
}

.role-content-item {
  width: 100%;
  height: 88rpx;
  border-bottom: 1px solid #D9D9D9;
  padding-left: 44rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.role-text {
  margin-left: 20rpx;
  font-size: 36rpx;
  font-family: STHeitiSC-Medium, STHeitiSC;
  font-weight: 500;
  color: #B4B4B4;
}

.role-content-img {
  border-bottom: 2px solid #D9D9D9;
}

.role-content-img,
.role-content-video {
  width: 100%;
  height: 258rpx;
  padding: 22rpx 48rpx;
  box-sizing: border-box;
  font-size: 0;
  box-sizing: border-box;
}

.role-box {
  display: inline-block;
  vertical-align: top;
}

.role-box {
  width: 386rpx;
  height: 100%;
  /* background: #ECECEC; */
  font-size: 0;
}

.img-box {
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: middle;
}

.img {
  width: 175rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.btn-box {
  margin-top: 24rpx;
}

.button-btn {
  width: 216rpx;
  height: 36rpxpx;
  font-size: 36rpx;
  font-family: STHeitiSC-Medium, STHeitiSC;
  font-weight: 500;
  color: #FFFFFF;
  background: #FDBD2F;
  line-height: 42rpx;
  border-radius: 38rpx;
}

.button-box {
  margin-top: 90rpx;
  margin-bottom: 80rpx;
}